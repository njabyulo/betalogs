{
  "name": "@betalogs/database",
  "version": "0.1.0",
  "private": true,
  "exports": {
    "./schema": {
      "types": "./dist/schema/index.d.mts",
      "import": "./dist/schema/index.mjs",
      "require": "./dist/schema/index.js"
    },
    "./connection": {
      "types": "./dist/connection.d.mts",
      "import": "./dist/connection.mjs",
      "require": "./dist/connection.js"
    }
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "lint": "pnpm lint:type && pnpm lint:code",
    "lint:type": "tsc --noEmit",
    "lint:code": "pnpm exec eslint . --max-warnings 0",
    "clean": "rm -rf dist .turbo",
    "clean:all": "pnpm clean && rm -rf node_modules"
  },
  "dependencies": {
    "drizzle-orm": "catalog:",
    "postgres": "catalog:"
  },
  "devDependencies": {
    "@types/node": "catalog:",
    "drizzle-kit": "catalog:",
    "tsup": "catalog:",
    "tsx": "catalog:",
    "typescript": "catalog:"
  }
}
